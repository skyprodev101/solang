{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // "sourceMap": true,
  },
  "exclude": ["."],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es2018",
      "lib": ["es2018", "dom"]
    },
  },
}
